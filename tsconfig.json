{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "es2016",
    "rootDirs": ["src"],
    "typeRoots": ["src/lib/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
